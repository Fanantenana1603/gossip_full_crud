<h1>Nouveau l'article</h1>



<%= form_for @gossip do |f| %>

<div class="form-group">
    <label> Titre du Gossip</label>
    <%= f.text_field :title, class:'form-control' %>
</div>

<div class="form-group">
    <label> ID </label>
    <%= f.number_field :user_id, class:'form-control' %>
</div>

<div class="form-group">
    <label> Contenu</label>
    <%= f.text_area :content, class:'form-control' %>
</div>

<div class="form_group">
    <button type="submit" name="button" class="btn btn-default">Valider</button>
 </div>

<% end %>
<%= link_to 'Back', gossips_path %>
